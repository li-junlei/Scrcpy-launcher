{
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "core:default",
        "shell:allow-open",
        "shell:allow-execute",
        "shell:allow-spawn",
        "shell:default",
        "dialog:allow-open",
        "dialog:allow-save",
        "dialog:allow-message",
        "dialog:allow-ask",
        "dialog:allow-confirm",
        "dialog:default",
        "fs:default",
        {
            "identifier": "fs:scope",
            "allow": [
                "$RESOURCE/*",
                "$RESOURCE/**"
            ]
        }
    ]
}